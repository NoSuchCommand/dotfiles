[color]
	ui = true
[color "decorate"]
	tag = magenta bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
	whitespace = red reverse
[color "grep"]
	filename = magenta
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[user]
	email = {{ git_email }}
	name = {{ git_name }}
[alias]
	lol = log --branches --remotes --tags --oneline --decorate --graph
	slog = log --branches --remotes --tags --oneline --decorate
	glog = log --branches --remotes --tags --oneline --no-decorate --graph
	ol = log --oneline --no-decorate
	co = checkout
	st = status
	ci = commit
	wdiff = diff --word-diff
[push]
	default = current
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[diff]
	tool = vimdiff
	wordRegex = .
[difftool]
	prompt = false
[status]
	showUntrackedFiles = all
[pull]
	rebase = merges
[core]
	excludesFile = ~/.gitignore
[rebase]
	abbreviateCommands = true
[remote "origin"]
	prune = true
